<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Estilos para cards -->
    <Style x:Key="CardStyle" TargetType="Grid">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!-- Estilos para botões -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
        <Setter Property="Padding" Value="20,8" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="MinWidth" Value="120" />
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="20,8" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="MinWidth" Value="120" />
    </Style>

    <!-- Estilos para cabeçalhos -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!-- Estilo para o resultado -->
    <Style x:Key="ResultTextBoxStyle" TargetType="TextBox">
        <Setter Property="MinHeight" Value="200" />
        <Setter Property="MaxHeight" Value="400" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorSecondaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="FontFamily" Value="Consolas" />
    </Style>

    <!-- Estilo para sliders -->
    <Style x:Key="ModernSliderStyle" TargetType="Slider">
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="Margin" Value="0,8" />
    </Style>

    <!-- Estilo para checkbox -->
    <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Margin" Value="0,8" />
    </Style>

    <!-- Estilo para InfoBar -->
    <Style x:Key="InfoBarStyle" TargetType="InfoBar">
        <Setter Property="IsClosable" Value="True" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

</ResourceDictionary>