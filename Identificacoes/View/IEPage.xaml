<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Identificacoes.View.IEPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Identificacoes.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="24">
        <StackPanel>
            <!-- Cabeçalho -->
            <TextBlock Text="Gerador de Inscrição Estadual" Style="{StaticResource HeaderTextStyle}" />
            
            <!-- InfoBar com dicas -->
            <InfoBar 
                Title="Informação" 
                Message="IEs são específicas para cada estado. Selecione a UF desejada." 
                IsOpen="True" 
                Severity="Informational"
                Style="{StaticResource InfoBarStyle}"/>

            <!-- Card de Configurações -->
            <Grid Style="{StaticResource CardStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Configurações" FontWeight="SemiBold" Margin="0,0,0,12" Grid.Row="0"/>
                
                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,8">
                    <TextBlock Text="Estado:" VerticalAlignment="Center" Width="100"/>
                    <ComboBox x:Name="Estados" Width="250" Margin="0,8">
                        <ComboBoxItem Content="Acre" Tag="IE-AC"/>
                        <ComboBoxItem Content="Alagoas" Tag="IE-AL"/>
                        <ComboBoxItem Content="Amapá" Tag="IE-AP"/>
                        <ComboBoxItem Content="Amazonas" Tag="IE-AM"/>
                        <ComboBoxItem Content="Bahia" Tag="IE-BA"/>
                        <ComboBoxItem Content="Ceará" Tag="IE-CE"/>
                        <ComboBoxItem Content="Distrito Federal" Tag="IE-DF"/>
                        <ComboBoxItem Content="Espírito Santo" Tag="IE-ES"/>
                        <ComboBoxItem Content="Goiás" Tag="IE-GO"/>
                        <ComboBoxItem Content="Maranhão" Tag="IE-MA"/>
                        <ComboBoxItem Content="Mato Grosso" Tag="IE-MT"/>
                        <ComboBoxItem Content="Mato Grosso do Sul" Tag="IE-MS"/>
                        <ComboBoxItem Content="Minas Gerais" Tag="IE-MG"/>
                        <ComboBoxItem Content="Pará" Tag="IE-PA"/>
                        <ComboBoxItem Content="Paraíba" Tag="IE-PB"/>
                        <ComboBoxItem Content="Paraná" Tag="IE-PR"/>
                        <ComboBoxItem Content="Pernambuco" Tag="IE-PE"/>
                        <ComboBoxItem Content="Piauí" Tag="IE-PI"/>
                        <ComboBoxItem Content="Rio de Janeiro" Tag="IE-RJ"/>
                        <ComboBoxItem Content="Rio Grande do Norte" Tag="IE-RN"/>
                        <ComboBoxItem Content="Rio Grande do Sul" Tag="IE-RS"/>
                        <ComboBoxItem Content="Rondônia" Tag="IE-RO"/>
                        <ComboBoxItem Content="Roraima" Tag="IE-RR"/>
                        <ComboBoxItem Content="Santa Catarina" Tag="IE-SC"/>
                        <ComboBoxItem Content="São Paulo" Tag="IE-SP"/>
                        <ComboBoxItem Content="Sergipe" Tag="IE-SE"/>
                        <ComboBoxItem Content="Tocantins" Tag="IE-TO"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,8">
                    <TextBlock Text="Quantidade:" VerticalAlignment="Center" Width="100"/>
                    <Slider x:Name="Quantidade" Style="{StaticResource ModernSliderStyle}"
                        Minimum="1" Maximum="100" StepFrequency="1" Value="1" 
                        TickPlacement="Outside" TickFrequency="10"/>
                    <TextBlock Text="{Binding Value, ElementName=Quantidade, Mode=OneWay}" 
                               Width="30" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
                
                <CheckBox x:Name="Formatado" Content="Formatado" 
                          Grid.Row="3" Style="{StaticResource ModernCheckBoxStyle}" IsChecked="True"/>
                
                <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,16,0,0" Spacing="8">
                    <Button x:Name="Gerar" Click="Gerar_IE" Style="{StaticResource PrimaryButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE117;" />
                            <TextBlock Text="Gerar" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="Copiar" Click="Copiar_Resultado" Style="{StaticResource SecondaryButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8C8;" />
                            <TextBlock Text="Copiar" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Card de Resultado -->
            <Grid Style="{StaticResource CardStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Resultado" FontWeight="SemiBold" Margin="0,0,0,12" Grid.Row="0"/>
                
                <TextBox x:Name="Resultado" Grid.Row="1" Style="{StaticResource ResultTextBoxStyle}" 
                         PlaceholderText="Selecione um estado e clique em Gerar..."/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
